<%- model_class = Image -%>
<div class="page-header">
  <h1 class="text-center"><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt class=text-center><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dt class=text-center ><%= @image.name %></dd>
  <dd class="text-center"><%= image_tag @image.avatar.variant(resize_to_limit: [400, 400]) if @image.avatar.attached?%></dd>
</dl>
<div class=text-center>
<%= link_to t('.back', :default => t("helpers.links.back")),
              images_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_image_path(@image), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              image_path(@image),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<div>